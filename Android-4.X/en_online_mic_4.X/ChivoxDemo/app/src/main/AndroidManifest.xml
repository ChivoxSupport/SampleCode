<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.chivoxonline">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Design.Light"
        android:name="com.example.chivoxonline.MyApplication">
        <activity android:name="com.example.chivoxonline.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.chivoxonline.WordSentPredActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.chivoxonline.MainActivity" />
        </activity>
        <activity
            android:name="com.example.chivoxonline.ChoiceActivity">
        </activity>
        <activity
            android:name="com.example.chivoxonline.SituationalDialogueActivity">
        </activity>
        <activity
            android:name="com.example.chivoxonline.DescribeThePictureActivity">
        </activity>
        <activity
            android:name="com.example.chivoxonline.AsrActivity">
        </activity>
        <activity
            android:name="com.example.chivoxonline.OuterFeedActivity">
        </activity>

    </application>

</manifest>